@model IEnumerable<CS_HOSPITALARIO.Models.CS_PACIENTES>

<div class="bd bgc-white">
    <div class="layers">
        <div class="layer w-100 p-15 bg-color-secondary-m color-blanco">
            <h5 class="lh-1">Pacientes recientes</h5>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th class="color-secondary-h" scope="col">Paciente ID</th>
                    <th class="color-secondary-h" scope="col">Nombres</th>
                    <th class="color-secondary-h" scope="col">Apellidos</th>
                    <th class="color-secondary-h" scope="col">Fecha de Registro</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                 {
                    <tr>
                        <td>
                            <a href="@Url.Action("EditarPaciente", "Admision")/@item.CLIENTE_ID">
                                <i class="fas fa-edit fsz-xs color-secondary-m" data-toggle="tooltip" data-placement="right" title="Editar Paciente"></i>
                            </a>
                            @Html.DisplayFor(modelItem => item.CLIENTE_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NOMBRES)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.APELLIDOS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FECHA_REGISTRO, "{0:dd/MM/yyyy}")
                        </td>
                    </tr>
                 }
            </tbody>
        </table>
        <div class="ta-c bdT w-100 p-15">
            <a class="btn btn-primary float-right" href="@Url.Action("NuevoPaciente", "Admision")">
                <i class="fas fa-plus-circle"></i>
                Nuevo Paciente
            </a>
            <a class="float-left" href="@Url.Action("Pacientes", "Admision")">Ver todos los pacientes &nbsp;<i class="fas fa-angle-right"></i></a>
        </div>
    </div>
</div>



