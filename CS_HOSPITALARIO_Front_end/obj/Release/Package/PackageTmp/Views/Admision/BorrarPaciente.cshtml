@model CS_HOSPITALARIO.Models.CS_PACIENTES

<h2>@ViewBag.Title</h2>

<hr />

@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-10">
                <h4>¿Está seguro que desea borrar el registro <strong>@Model.NOMBRES @Model.APELLIDOS</strong> con ID= <strong>@Model.CLIENTE_ID</strong>?</h4>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="text-left">
                    <input type="submit" value="Confirmar" class="btn btn-primary" />
                    @Html.ActionLink("Cancelar", "Pacientes", "Admision", null, new { @class = "btn btn-outline-secondary" })
                </div>
            </div>
        </div>
    </div>
}