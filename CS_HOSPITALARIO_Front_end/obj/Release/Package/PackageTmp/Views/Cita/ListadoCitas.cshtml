@model IEnumerable<CS_HOSPITALARIO.Models.SpListadoCitasCS_Result>
@{
    ViewBag.Title = "Listado de Citas";
}
<script src="~/Scripts/vendor.js"></script>
<div class="row m-0 gap-20 masonry pos-r">
    <div class="masonry-item w-100">
        <div class="row gap-20">
            <div class="masonry-item col-md-12 col-sm-12">
                <div class="bd bgc-white">
                    <div class="layers">
                        <div class="ta-c w-100 p-10">
                            <h4 class="float-left"><span class="color-secondary-h text-uppercase">@ViewBag.Title</span></h4>
                            <nav class="float-right m-0" aria-label="breadcrumb">
                                <ol class="breadcrumb bg-color-blanco">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Principal</a></li>
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admision")">Citas</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row m-0 gap-20 masonry pos-r">
    <div class="masonry-item w-100">
        <div class="row gap-20">
            <div class="masonry-item col-md-12 col-sm-12">
                <div class="bgc-white p-20 bd">
                    <h2>@ViewBag.Title</h2>
                    <hr />
                    <table class="table table-responsive table-hover" id="tabla_cuartos">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>
                                    Cod Paciente
                                </th>
                                <th>
                                    Paciente
                                </th>
                                <th>
                                    Identidad
                                </th>
                                <th>
                                    Fecha Inicio Atencion
                                </th>
                                <th>
                                    Fecha Fin Atencion
                                </th>
                                <th>
                                    Area Servicio
                                </th>
                                @*<th>
                                        Tipo Servicio
                                    </th>*@
                                <th>
                                    Doctor
                                </th>
                                @*<th>
                                        Asunto
                                    </th>*@
                                <th>
                                    Observacion
                                </th>
                                <th>
                                    Estado
                                </th>
                                <th>
                                    Fecha Registro
                                </th>
                                @*<th></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ID_CITA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CLIENTE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PACIENTE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IDENTIFICACION)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FECHA_INICIO_ATENCION)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FECHA_FIN_ATENCION)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AREA_DESCRIPCION)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.TIPO_SERVICIO_ID)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RECURSO_DESCRIPCION)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.ASUNTO)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OBSERVACION)
                                    </td>
                                    <td>
                                        @*@Html.DisplayFor(modelItem => item.ESTADO_DESCRIPCION)*@
                                        @{
                                            switch (item.ESTADO_DESCRIPCION)
                                            {
                                                case "Por Confirmar":
                                                    <span class="badge badge-warning">@Html.DisplayFor(modelItem => item.ESTADO_DESCRIPCION)</span>
                                                    break;
                                                case "Confirmada":
                                                    <span class="badge badge-success">@Html.DisplayFor(modelItem => item.ESTADO_DESCRIPCION)</span>
                                                    break;
                                                case "Admitida":
                                                    <span class="badge badge-primary">@Html.DisplayFor(modelItem => item.ESTADO_DESCRIPCION)</span>
                                                    break;
                                                case "Cancelada":
                                                    <span class="badge badge-danger">@Html.DisplayFor(modelItem => item.ESTADO_DESCRIPCION)</span>
                                                    break;
                                                default:@Html.DisplayFor(modelItem => item.ESTADO_DESCRIPCION) break;
                                        }
                                        }
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.FECHA_CREACION)
                                    </td>
                                    @*<td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID_CITA }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.ID_CITA }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID_CITA })
                                        </td>*@
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>
                                    Cod Paciente
                                </th>
                                <th>
                                    Paciente
                                </th>
                                <th>
                                    Identidad
                                </th>
                                <th>
                                    Fecha Inicio Atencion
                                </th>
                                <th>
                                    Fecha Fin Atencion
                                </th>
                                <th>
                                    Area Servicio
                                </th>
                                @*<th>
                                        Tipo Servicio
                                    </th>*@
                                <th>
                                    Doctor
                                </th>
                                @*<th>
                                        Asunto
                                    </th>*@
                                <th>
                                    Observacion
                                </th>
                                <th>
                                    Estado
                                </th>
                                <th>
                                    Fecha Registro
                                </th>
                                @*<th></th>*@
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/DataTables/css/PagedList.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/DataTableSearch.css" rel="stylesheet" />
@section scripts
{
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/buttons.flash.min.js"></script>
    <script src="~/Scripts/jszip.min.js"></script>
    <script src="~/Scripts/buttons.html5.min.js"></script>
    <script src="~/Scripts/dataTables.select.min.js"></script>
    <script src="~/Scripts/pdfmake.min.js"></script>
    <script src="~/Scripts/vfs_fonts.js"></script>
    <script type="text/javascript">
        /* INICIALIZACIÓN */
        $(document).ready(function () {
            $('#tabla_cuartos tfoot th').each(function () {
                var title = $(this).text().trim();
                $(this).html('<input class="form-control" type="text" placeholder="Buscar por ' + title + '" />');
            });
            var events = $('#events');
            var table = $('#tabla_cuartos').DataTable({
                "order": [[0, "desc"]],
                dom: 'Bfrtip',
                language: {
                    select: {
                        rows: {
                            0: "",
                            1: " │ %d registro seleccionado."
                        }
                    }
                },
                select: true,
                buttons: [{
                    text: 'Nuevo',
                    action: function (e, dt, node, config) {
                        window.location.href = '/Cita/Index';
                    },
                    init: function (api, node, config) {
                        $(node).removeClass('btn-default')
                    }
                },
                    "pdf", "excel"
                ]
            });
            // Hide two columns
            table.columns([0]).visible(false);

            // Apply the search
            table.columns().every(function () {
                var that = this;

                $('input', this.footer()).on('keyup change', function () {
                    if (that.search() !== this.value) {
                        that
                            .search(this.value)
                            .draw();
                    }
                });
            });
            $('#tabla_cuartos tfoot tr').appendTo('#tabla_cuartos thead');
            $("#tabla_cuartos_wrapper button").each(function () {
                $(this).removeClass("dt-button");
                $(this).addClass("btn btn-sm");
                if ($(this).text() == 'PDF' || $(this).text() == 'Excel') {
                    $(this).addClass("btn-secondary");
                }
                else {
                    $(this).addClass("btn-primary");
                }
            });
            $('#tabla_cuartos_filter input').addClass("form-control");
            $('#tabla_cuartos tbody').on('dblclick', 'tr', function () {
                var rowSelected = table.rows({ selected: true }).data();
                window.location.href = '/Cuarto/Edit/' + rowSelected[0][0];
            });
        });
    </script>

}

