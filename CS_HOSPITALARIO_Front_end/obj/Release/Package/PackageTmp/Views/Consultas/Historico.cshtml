    <script type="text/javascript">
        function CargarGrid() {
            $('#tabla_consulta tfoot th').each(function () {
                var title = $(this).text().trim();
                $(this).html('<input class="form-control" type="text" placeholder="Buscar por ' + title + '" />');
            });
            var events = $('#events');
            var table = $('#tabla_admisiones').DataTable({
                "order": [[8, "desc"]],
                "columns": [
                    { "width": "7%" },
                    { "width": "10%" },
                    null,
                    { "width": "10%" },
                    null,
                    { "width": "10%" },
                    null,
                    null,
                    null
                ],

                select: true,
                buttons: ["pdf", "excel"]
            });
            // Apply the search
            table.columns().every(function () {
                var that = this;

                $('input', this.footer()).on('keyup change', function () {
                    if (that.search() !== this.value) {
                        that
                            .search(this.value)
                            .draw();
                    }
                });
            });
            $('#tabla_consulta tfoot tr').appendTo('#tabla_consulta thead');
            $("#tabla_consulta_wrapper button").each(function () {
                $(this).removeClass("dt-button");
                $(this).addClass("btn btn-sm");
                if ($(this).text() == 'PDF' || $(this).text() == 'Excel') {
                    $(this).addClass("btn-secondary");
                }
            });
            $('#tabla_consulta_filter input').addClass("form-control");
        }
        function SelectPacientes() {
            var pacientes = [];
            $.ajax({
                type: "GET",
                url: "/Consultas/GetPacientes",
                success: function (data) {
                    //pacientes.push({
                    //    ID: 0,
                    //    NOMBRE: "Seleccione el paciente",
                    //});
                    //$.each(data, function (i, v) {
                    //    pacientes.push({
                    //        ID: v.ID,
                    //        NOMBRE: v.NOMBRE,
                    //    });
                    //})
                    $("#PACIENTE").dxSelectBox({
                        placeholder: "Seleccione el paciente",
                        dataSource: new DevExpress.data.ArrayStore({
                            data: data,
                            key: "ID"
                        }),
                        displayExpr: "NOMBRE",
                        valueExpr: "ID",
                        searchEnabled: true,
                        showClearButton: true,
                        onValueChanged: function (data) {
                            if (data.value != 0 && data.value != null) {
                                $("#CONSULTAS").show();
                                // $("#CONSULTAS").find('tbody')
                                $('#CONSULTAS tbody').html('');
                                ListarConsultas(data.value);
                                CargarGrid();
                            }
                            else {
                                $("#CONSULTAS").hide();
                            }
                        }
                    });
                },
                error: function (error) {
                    alert(error);
                }
            })
        }
        function ListarConsultas(paciente) {
            var consultas = [];
            $.ajax({
                type: "POST",
                data: { paciente },
                url: "/Consultas/GetConsultasPacientes",
                success: function (data) {
                    $.each(data, function (i, v) {
                        $("#CONSULTAS").find('tbody')
                            .append('<tr id="' + v.NUM_CONSULTA + '"><td>' + v.NUM_CONSULTA + '</td><td>' + v.ID_MEDICO + '</td>><td>' + v.MEDICO + '</td><td>' + v.AREA_SERVICIO + '</td><td>' + v.FECHA_REGISTRO + '</td><td><button type="button" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Reporte de Consulta  Medica" onclick="MostrarConsulta(' + v.NUM_CONSULTA + ')"><i class="fas fa-file-medical-alt"></i></button></td>' + '</td><td><button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="right" title="Reporte de receta de la Consulta" onclick="MostrarReceta(' + v.NUM_CONSULTA + ')"><i class="fa fa-medkit"></i></button></td>' + '</tr>');
                    })
                },
                error: function (error) {
                    alert(error);
                }
            })
        }
        function MostrarConsulta(consulta) {
            window.open('/Consultas/FormartoHistorialClinico?consulta=' + consulta, '_blank');
        }
        function MostrarReceta(consulta) {
            window.open('/Consultas/FormartoRecetaConsulta?consulta=' + consulta, '_blank');
        }
        /* INICIALIZACIÓN */
        $(document).ready(function () {
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })
            $("#PACIENTE").dxSelectBox();
            SelectPacientes();
        });
    </script>

