@model CS_HOSPITALARIO.Models.CS_PLANTILLA

@{
    ViewBag.Title = "Edición de Plantillas";
}

<link href="~/Content/select2.min.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.ckeditor.com/4.11.1/standard/ckeditor.js"></script>
<script src="~/Scripts/vendor.js"></script>


<div class="row m-0 gap-20 masonry pos-r">
    <div class="masonry-item w-100">
        <div class="row gap-20">
            <div class="masonry-item col-md-12 col-sm-12">
                <div class="bd bgc-white">
                    <div class="layers">
                        <div class="ta-c w-100 p-10">
                            <h4 class="float-left"><span class="color-secondary-h text-uppercase">@ViewBag.Title</span></h4>
                            <nav class="float-right m-0" aria-label="breadcrumb">
                                <ol class="breadcrumb bg-color-blanco">
                                    <li class="breadcrumb-item"><a href="@Url.Action(" Index","Imagenologia")">Imagenologia</a></li>
                                    <li class="breadcrumb-item"><a href="@Url.Action(" Plantillas_Listar","Imagenologia")">Plantillas</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row m-0 gap-20 masonry pos-r">
    <div class="masonry-item w-100">
        <div class="row gap-20">
            <div class="masonry-item col-md-12 col-sm-12">
                <div class="bgc-white p-20 bd">

                    @using (Html.BeginForm())
                    {

                    <div class="form-horizontal">
                        <div class="row p-20">
                            <h2 class="col-form-label fsz-lg color-secondary-m">@ViewBag.Title</h2>
                            <div class="form-group ml-auto">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                @Html.ActionLink("Cancelar", "Plantillas_Listar", "Imagenologia", null, new { @class = "btn btn-outline-secondary" })
                            </div>
                        </div>

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID_PLANTILLA)
                        @Html.HiddenFor(model => model.ARTICULO)
                        @Html.HiddenFor(model => model.DOCTOR_ID)

                        <div class="form-row">
                            <div class="form-group col-md-12">

                                <div class="col-md-offset-6 col-md-12">
                                    @Html.LabelFor(model => model.ACTIVO, "Activo", htmlAttributes: new { @class = "control-label " })   @Html.CheckBoxFor(model => model.ACTIVO)

                                </div>
                                <div class="col-md-offset-1 col-md-1">
                                    @Html.LabelFor(model => model.ARTICULO, "Estudio:")
                                </div>
                                <div class=" col-md-5">
                                    <div class="input-group">
                                        @Html.DropDownList("ESTUDIO", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(model => model.ARTICULO, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    @Html.LabelFor(model => model.DESCRIPCION, "Descripción:")

                                </div>
                                <div class=" col-md-5">
                                    <div class="input-group">
                                        @Html.Editor("DESCRIPCION", new { htmlAttributes = new { @class = "form-control", style = "width: 100% !important;", placeholder = "Descripcion de la plantilla", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.DESCRIPCION, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-offset-1 col-md-1">
                                    @Html.LabelFor(model => model.DOCTOR_ID, "Radiologo:")
                                </div>

                                <div class="col-md-5">
                                    <div class="input-group">
                                        @Html.DropDownList("DOCTOR", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(model => model.DOCTOR_ID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <div class=" col-md-10">
                                    @Html.LabelFor(model => model.COMENTARIO, "Detalle:", htmlAttributes: new { @class = "control-label col-md-2" })
                                </div>
                                <br />
                                <div class="col-md-offset-1 col-md-12">

                                    @*<textarea name="COMENTARIO" id="COMENTARIO" rows="10" cols="10"></textarea>*@
                                    @Html.TextAreaFor(model => model.COMENTARIO, htmlAttributes: new { @class = "form-control" })
                                    <script>

                                        CKEDITOR.replace('COMENTARIO', { removeButtons: 'Source' });

                                    </script>

                                </div>
                            </div>
                        </div>

                        
                        </div>
                        }
                    </div>
            </div>
        </div>
    </div>
</div>

                    @section Scripts {

                        @Scripts.Render("~/bundles/jqueryval")


                    }
