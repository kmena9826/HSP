                        examen.push({
                            PROCEDIMIENTO: id,
                            CLIENTE_ID: $("#PEDIDO").val(),
                            STAT: $(this).attr("stat"),
                            ANULADO: 'N',
                            LECTURA: 'N',
                            CANTIDAD: $(this).attr("cantidad"),
                        });
                    }
                });
                GuardarAdmisionImagen(admision, examen, $("#FINANCIADOR").val());
            }
            isvalid = false;
            return isvalid;
        }

