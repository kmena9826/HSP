                    isvalid = false;
                    $("#admision-tab").css('color', 'red');
                }
                if (numafiliado.val() == "") {

                    $.notify({ message: 'El numero de afiliado es requerido' }, { type: 'danger' });
                    numafiliado.addClass("is-invalid");
                    isvalid = false;
                    $("#admision-tab").css('color', 'red');
                }
            }
            if (CountExamenes == 1) {
                $.notify({ message: 'Es necesario que agregue al menos un estudio' }, { type: 'danger' });
                $("#orden-tab").css('color', 'red');
                $("#errorexamenes").show();
                isvalid = false;
            }
            if (isvalid == false) {
                $("#admision-tab").click();
            }
            if (isvalid == true) {
                let admision = {
