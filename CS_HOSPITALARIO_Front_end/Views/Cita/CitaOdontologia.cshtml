                    CLIENTE_ID: $("#PACIENTE").dxSelectBox('instance').option("value"),
                    MEDICO_ID: $("#MEDICO_CITA").dxSelectBox('instance').option('value'),
                    REMITIDO_ID: $("#REMITIDO_CITA").dxSelectBox('instance').option('value'),
                    AREA_SERVICIO_ID: $("#AREA").dxSelectBox('instance').option("value"),
                    ESTATUS: $("#ESTADO").dxSelectBox('instance').option("value"),
                    FECHA_INICIO_ATENCION: startDate,
                    FECHA_FIN_ATENCION: endDate,
                    FECHA_HORA_LLEGADA_PAC: arrivalTime,
                    FECHA_HORA_ENTRADA_PAC: enterTime,
                    FECHA_HORA_SALIDA_PAC: exitTime,
                    OBSERVACION: $('#txtDescription').val()
                }
                SaveEvent(data);
                // call function for submit data to the server
            })

            SelectPacientes();
            SelectAreaServicios();
            SelectRecursos();
            SelectEstados();
            SelectMedicos();
            SelectRemitido();
            SelectFiltroEstados();
            SelectFiltroRecursos();
            SelectFiltroMedicos();
        })
        function FetchEventAndRenderCalendar(filtro_recurso, filtro_estado) {
            var events = [];
            if (filtro_recurso == 0 && filtro_estado == 0) {
                $.ajax({
                    type: "GET",
                    url: "/Cita/GetEventsAll",
                    success: function (response) {
                        if (response.status) {
                            $.each(response.data, function (i, v) {
                                var colorevent;
                                switch (v.ESTADOID) {
                                    case 2104:
                                        colorevent = "#F57C00";
                                        break;
                                    case 2105:
                                        colorevent = "#2E7D32";
                                        break;
                                    case 2106:
                                        colorevent = "#3F51B5";
                                        break;
                                    case 2107:
                                        colorevent = "#C62828";
                                        break;
                                }
                                events.push({
                                    eventID: v.ID_CITA,
                                    pacienteID: v.PASIENTECODCLIENTE,
                                    pacientes: v.PACIENTES,
                                    recursosID: v.RECURSOSID,
                                    recursos: v.RECURSODESCRIPCION,
                                    medicosID: v.MEDICOSID,
                                    medicos: v.MEDICOSDESCRIPCION,
                                    remitidosID: v.REMITIDOSID,
                                    remitidos: v.REMITIDOSDESCRIPCION,
                                    estadoID: v.ESTADOID,
                                    estado: v.ESTADODESCRIPCION,
                                    areaID: v.AREAID,
                                    area: v.AREADESCRIPCION,
                                    title: v.ASUNTO,
                                    description: v.OBSERVACIONES,
                                    start: moment(v.Start),
                                    end: v.End != null ? moment(v.End) : null,
                                    arrival: v.Arrival != null ? moment(v.Arrival) : null,
                                    enter: v.Enter != null ? moment(v.Enter) : null,
                                    exit: v.Exit != null ? moment(v.Exit) : null,
                                    color: colorevent
                                });
                            });
                            GenerateCalender(events);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function (error) {
                        alert("Error al obtener los eventos.");
                        console.error(error);
                    }
                });
            }

            else {
                if (filtro_recurso != 0 && filtro_estado != 0) {
