                            @*<input type="text" id="txtStart" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="ti-calendar"></span>
                                </span>*@
                        </div>

                    </div>
                    <div class="form-group" id="divEndDate">
                        <label>Fecha Fin:</label>
