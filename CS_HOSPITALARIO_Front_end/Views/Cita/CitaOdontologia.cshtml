            $("#dtp1,#dtp2").dxDateBox({
                type: "datetime",
                timeFormat: 'DD/MM/YYYY HH:mm',
                pickerType: "list",
                interval: 30,
                showClearButton: true
            });
            $("#arrivalTime,#enterTime,#leavingTime").dxDateBox({
                type: "time",
                timeFormat: 'HH:mm',
                pickerType: "list",
                interval: 30,
                showClearButton: true
            });
            $('#btnSave').click(function () {
