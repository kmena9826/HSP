                    }
                    try {
                        endDate = $("#dtp2").dxDateBox('instance').option("value")["_d"].toUTCString();
                    }
                    catch (err) {
                        endDate = $("#dtp2").dxDateBox('instance').option("value").toUTCString();
                    }


