                            @*<input type="text" id="txtEnd" class="form-control" />
                                <span class="input-group-addon">
                                    <span class="ti-calendar"></span>
                                </span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Descripcion:</label>
