                    return;
                }
                if ($("#AREA").dxSelectBox('instance').option("value") == null) {
                    alert('El area es requerido');
                    return;
                }
                if ($("#RECURSO_CITA").dxSelectBox('instance').option("value") == null) {
                    alert('El recurso es requerido');
                    return;
                }
