                        alert('La fecha de inicio debe de ser menor a la feha fin');
                        return;
                    }
                }

                if ($("#leavingTime").dxDateBox('instance').option("value") != null) {
                    try {
                        exitTime = $("#leavingTime").dxDateBox('instance').option("value")["_d"].toUTCString();
                    }
                    catch (err) {
                        exitTime = $("#leavingTime").dxDateBox('instance').option("value").toUTCString();
                    }
                }

                if ($("#arrivalTime").dxDateBox('instance').option("value") != null) {
                    try {
                        arrivalTime = $("#arrivalTime").dxDateBox('instance').option("value")["_d"].toUTCString();
                    }
                    catch (err) {
                        arrivalTime = $("#arrivalTime").dxDateBox('instance').option("value").toUTCString();
                    }
                }

                if ($("#enterTime").dxDateBox('instance').option("value") != null) {
                    try {
                        enterTime = $("#enterTime").dxDateBox('instance').option("value")["_d"].toUTCString();
                    }
                    catch (err) {
                        enterTime = $("#enterTime").dxDateBox('instance').option("value").toUTCString();
                    }

                }
