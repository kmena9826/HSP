@model CS_HOSPITALARIO.Models.CS_PERSONAL

@{
    ViewBag.Title = "Registrar Personal";
}
<script src="~/Scripts/vendor.js"></script>
<div class="row m-0 gap-20 masonry pos-r">
    <div class="masonry-item w-100">
        <div class="row gap-20">
            <div class="masonry-item col-md-12 col-sm-12">
                <div class="bd bgc-white">
                    <div class="layers">
                        <div class="ta-c w-100 p-10">
                            <h4 class="float-left"><span class="color-secondary-h text-uppercase">@ViewBag.Title</span></h4>
                            <nav class="float-right m-0" aria-label="breadcrumb">
                                <ol class="breadcrumb bg-color-blanco">
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Principal</a></li>
                                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Personal")">Personal</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row m-0 gap-20 masonry pos-r">
    <div class="masonry-item w-100">
        <div class="row gap-20">
            <div class="masonry-item col-md-12 col-sm-12">
                <div class="bgc-white p-20 bd">
                    @using (Html.BeginForm())
                    {
                        @*@Html.AntiForgeryToken()*@
                        @Html.HiddenFor(model => model.PERSONAL_ID)
                        <div class="form-horizontal">
                            <div class="row p-20">
                                <h2 class="col-form-label fsz-lg color-secondary-m">@ViewBag.Title</h2>
                                <div class="form-group ml-auto">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", "Personal", null, new { @class = "btn btn-outline-secondary" })
                                </div>
                            </div>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Nombres*</label>
                                    <div class="">
                                        @Html.EditorFor(model => model.NOMBRES, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombres", autofocus = "autofocus" } })
                                        @Html.ValidationMessageFor(model => model.NOMBRES, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    @{
                                        List<SelectListItem> _puesto = new List<SelectListItem>();
                                        _puesto.Add(PuestoPersonalEnum.Radiologo);
                                        _puesto.Add(new SelectListItem { Text = "Laboratorio", Value = "L" });
                                        _puesto.Add(new SelectListItem { Text = "General", Value = "G" });

                                    }

                                    <label>Puesto*</label>
                                    <div class="">
                                        @Html.DropDownListFor(model => model.PUESTO, _puesto, "--Seleccione--", new { @class = "form-control", placeholder = "Area" })
                                        @Html.ValidationMessageFor(model => model.PUESTO, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label>Licencia*</label>
                                    <div class="">
                                        @Html.EditorFor(model => model.LIC, new { htmlAttributes = new { @class = "form-control", placeholder = "Licencia" } })
                                        @Html.ValidationMessageFor(model => model.LIC, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Especialidad*</label>
                                    <div class="">
                                        @Html.DropDownList("ESPECIALIDAD",null, "Seleccione...", htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ESPECIALIDAD, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <hr />
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>


