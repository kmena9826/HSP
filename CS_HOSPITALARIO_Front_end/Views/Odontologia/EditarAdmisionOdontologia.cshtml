        function EliminarDetalle(laboratorio) {
            $.ajax({
                type: "POST",
                url: '/Admision/EliminarLaboratorio',
                data: JSON.stringify({ laboratorio: laboratorio }),
                dataType: "JSON",
                contentType: "application/json",
                success: function (data) {
                    if (data.status) {
                        InsertarTotalLaboratorio($("#PEDIDO").val());
                        location.reload();
                    }
                },
                error: function () {
                    $.notify({ message: 'Error al registrar los contactos del paciente' }, { type: 'danger' });
                }
            })
        }
        function ValidarForm() {
            let isvalid = true;

            var paciente = $("#PACIENTE_ID");
            paciente.removeClass("is-invalid");

            var remitido = $("#REMITIDO");
            remitido.removeClass("is-invalid");

            var causa = $("#CAUSA_ADMISION_ID");
            causa.removeClass("is-invalid");

            var prioridad = $("#PRIORIDAD_ID");
            prioridad.removeClass("is-invalid");

            var financiador = $("#FINANCIADOR");
            financiador.removeClass("is-invalid");

